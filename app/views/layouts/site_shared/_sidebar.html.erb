<div id="home-sidebar" class="col-md-3">
  <p class="lead"><%= @categories.first.model_name.human(count: 2) %></p>
  <div class="list-group">
    <% @categories.each do |category| %>
      <%= link_to site_category_path(category), class: 'list-group-item' do %>
        <%= category.description %> 
        <%= content_tag :span, category.ads_count, class: 'badge' %>
      <% end %>
    <% end %>
  </div>
</div>